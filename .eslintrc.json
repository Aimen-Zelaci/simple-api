{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "single"],
        "comma-spacing": [2 ,{ "before": false, "after": true }],
        "brace-style": [2, "1tbs"],
        "func-call-spacing": [1, "never"]
    }
}
